#include <stdio.h>
#include <stdlib.h>

int main()
{
	int i, n;
	
	printf("Enter the size for an integer array: ");
	scanf("%d", &n);
	
	int *arr = (int*)malloc(n*sizeof(int));
	
	for(i = 0; i < n; i++)
	{
		printf("Enter integer %d: ", i+1);
		scanf("%d", arr + i);
	}
	
	printf("\nYour array: ");
	
	for(i = 0; i < n; i++)
	{
		printf("%d ", *(arr+i));
	}
	
	free(arr);
}
