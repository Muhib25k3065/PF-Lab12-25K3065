#include <stdio.h>
#include <stdlib.h>

int main()
{
	int i, n;
	
	printf("Enter the amount of integer elements in your array: ");
	scanf("%d", &n);
	
	int *arr = calloc(n, sizeof(int));
	
	for(i = 0; i < n; i++)
	{
		printf("Enter integer %d: ", i+1);
		scanf("%d", arr+i);
	}
	
	printf("\nYou entered (from calloc): \n");
	
	for(i = 0; i < n; i++)
	{
		printf("%d\n", *(arr+i));
	}
	
	free(arr);
	
	arr = malloc(n*sizeof(int));
	
	for(i = 0; i < n; i++)
	{
		printf("Enter integer %d: ", i+1);
		scanf("%d", arr+i);
	}
	
	printf("\nYou entered (from malloc): \n");
	
	for(i = 0; i < n; i++)
	{
		printf("%d\n", *(arr+i));
	}
	
	free(arr);
	
	return 0;
}
