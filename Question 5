#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
	char str1[50];
	char str2[50];
	
	printf("Enter the first string: ");
	scanf("%s", str1);
	
	printf("Enter the second string: ");
	scanf("%s", str2);
	
	int length = strlen(str1);
	int length2 = strlen(str2);
	
	int totalLength = length + length2;
	
	char *str3 = malloc((totalLength+1)*sizeof(char));
	
	strcpy(str3, str1);
	strcat(str3, str2);
	
	printf("Concatenated string: %s", str3);
	
	free(str3);
		
	return 0;
}
