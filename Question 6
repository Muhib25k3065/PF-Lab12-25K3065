#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int digitalRoot(int n);

int main()
{
	int n;
	
	printf("Enter a number: ");
	scanf("%d", &n);
	
	int root;
	
	root = digitalRoot(n);
	
	printf("The digital root of %d is: %d", n, root);
	
	return 0;
}

int digitalRoot(int n)
{
	if(n < 10)
	{
		return n;
	}
	
	int sum = 0;
	
	while(n > 0)
	{
		sum += n%10;
		n = n/10;
	}
	
	return digitalRoot(sum);
}
